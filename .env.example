# KTTC Configuration File
# Copy this to .env and fill in your credentials

# ============================================
# LLM Provider API Keys
# ============================================

# OpenAI (https://platform.openai.com/api-keys)
KTTC_OPENAI_API_KEY=sk-proj-...

# Anthropic Claude (https://console.anthropic.com/settings/keys)
KTTC_ANTHROPIC_API_KEY=sk-ant-api03-...

# GigaChat (Sber) (https://developers.sber.ru/portal/products/gigachat)
KTTC_GIGACHAT_CLIENT_ID=your-client-id
KTTC_GIGACHAT_CLIENT_SECRET=your-client-secret

# ============================================
# Default Provider & Model
# ============================================

# Which provider to use by default
KTTC_DEFAULT_LLM_PROVIDER=anthropic

# Which model to use (CHEAPEST OPTIONS FOR TESTING)
# Anthropic: claude-haiku-4-5-20251001 ($0.80/$4 per 1M tokens)
# OpenAI: gpt-4o-mini ($0.15/$0.60 per 1M tokens)
KTTC_DEFAULT_MODEL=claude-haiku-4-5-20251001

# Temperature (0.1 = more focused, good for QA)
KTTC_DEFAULT_TEMPERATURE=0.1

# Max tokens per response
KTTC_DEFAULT_MAX_TOKENS=2000

# ============================================
# Quality Settings
# ============================================

# Minimum MQM score to pass
KTTC_MQM_PASS_THRESHOLD=95.0

# Log level
KTTC_LOG_LEVEL=INFO

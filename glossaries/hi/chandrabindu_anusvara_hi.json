  "overview": {
    "chandrabindu": {
      "symbol": "ँ",
      "name_hi": "चंद्रबिंदु",
      "name_en": "Chandrabindu (Moon-dot)",
      "type": "अनुनासिक स्वर (Nasalized vowel)",
      "pronunciation": "Nasalization of the vowel, breath through nose AND mouth",
      "usage": "Used when there is NO matra above the headline (शिरोरेखा)"
    },
    "anusvara": {
      "symbol": "ं",
      "name_hi": "अनुस्वार",
      "name_en": "Anusvara (After-sound)",
      "type": "व्यंजन ध्वनि (Consonant sound)",
      "pronunciation": "Pure nasal consonant, breath only through nose",
      "usage": "Used when there IS a matra above the headline OR before certain consonants"
    },
    "key_difference": "चंद्रबिंदु = nasalized vowel (softer), अनुस्वार = nasal consonant (stronger)",
    "common_mistake": "Using anusvara where chandrabindu is required changes meaning"
  },
  "usage_rules": {
    "rule_1_no_matra_above": {
      "rule": "When NO matra above शिरोरेखा → use चंद्रबिंदु (ँ)",
      "applies_to": "अ, आ, उ, ऊ vowels",
      "examples": {
        "correct": ["चाँद", "आँख", "गाँव", "हँसना", "पूँछ", "माँ", "साँप"],
        "incorrect": ["चांद", "आंख", "गांव", "हंसना", "पूंछ", "मां", "सांप"]
      }
    },
    "rule_2_matra_above": {
      "rule": "When matra IS above शिरोरेखा → use अनुस्वार (ं)",
      "applies_to": "इ, ई, ए, ऐ, ओ, औ vowels (their matras go above)",
      "examples": {
        "correct": ["हिंदी", "नहीं", "मैं", "कहीं", "वहीं", "तेंदुआ"],
        "note": "Because ि, ी, े, ै, ो, ौ matras are above, use ं not ँ"
      }
    },
    "rule_3_before_consonants": {
      "rule": "Before varga consonants → use अनुस्वार (ं)",
      "applies_to": "Before क, ख, ग, घ, च, छ, ज, झ, ट, ठ, ड, ढ, त, थ, द, ध, प, फ, ब, भ",
      "examples": {
        "correct": ["अंक", "गंगा", "चंचल", "पंजाब", "संत", "बंद"],
        "note": "Anusvara before these consonants represents the corresponding nasal (ङ्, ञ्, ण्, न्, म्)"
      }
    },
    "rule_4_word_final": {
      "rule": "Word-final nasalization → use चंद्रबिंदु if no matra above",
      "examples": {
        "correct": ["हाँ", "नहीं", "वहाँ", "यहाँ"],
        "note": "हाँ (yes) vs हाँ with anusvara would be different"
      }
    }
  },

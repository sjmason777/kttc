      },
      "metals": {
        "gender": "masculine",
        "examples": ["सोना", "चाँदी", "लोहा"],
        "note": "Exception: चाँदी is feminine"
      },
      "body_parts_paired": {
        "gender": "feminine",
        "examples": ["आँख", "उँगली", "टाँग"],

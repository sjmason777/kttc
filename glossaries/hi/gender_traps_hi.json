  "agreement_patterns": {
    "description": "How gender affects other parts of speech",
    "adjective_agreement": {
      "masculine_singular": "-आ ending → बड़ा, छोटा, अच्छा",
      "masculine_plural": "-ए ending → बड़े, छोटे, अच्छे",
      "feminine_all": "-ई ending → बड़ी, छोटी, अच्छी",
      "examples": {
        "correct": ["बड़ा घर", "बड़े घर", "बड़ी किताब", "बड़ी किताबें"],
        "incorrect": ["बड़ी घर", "बड़ा किताब"]
      }
    },
    "verb_agreement": {
      "masculine_singular": "-आ/-ता ending",
      "masculine_plural": "-ए/-ते ending",
      "feminine_all": "-ई/-ती ending",
      "examples": {
        "correct": ["लड़का गया", "लड़के गए", "लड़की गई", "लड़कियाँ गईं"],
        "incorrect": ["लड़का गई", "लड़की गया"]
      }
    },
    "possessive_agreement": {
      "rule": "का/की/के agrees with POSSESSED noun, not possessor",
      "examples": {
        "correct": ["राम की किताब (किताब=fem)", "सीता का भाई (भाई=masc)"],
        "incorrect": ["राम का किताब", "सीता की भाई"]
      }
    }
  },

    "alppran": {
      "name_hi": "अल्पप्राण",
      "name_en": "Unaspirated",
      "definition": "Consonants pronounced with minimal breath",
      "letters": ["क", "ग", "च", "ज", "ट", "ड", "त", "द", "प", "ब"],
      "rule": "1st and 3rd letters of each varga (row)"
    },
    "mahapran": {
      "name_hi": "महाप्राण",
      "name_en": "Aspirated",
      "definition": "Consonants pronounced with strong breath (h-sound)",
      "letters": ["ख", "घ", "छ", "झ", "ठ", "ढ", "थ", "ध", "फ", "भ"],
      "rule": "2nd and 4th letters of each varga (row)"
    },
    "trap": "Aspiration CHANGES MEANING - not just accent difference",
    "test": "Hold hand in front of mouth - aspirated sounds produce breath"
  },

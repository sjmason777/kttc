  "common_mistakes_foreigners": {
    "description": "Mistakes commonly made by non-native speakers",
    "mistake_1": {
      "error": "Not aspirating महाप्राण consonants",
      "example": "Saying 'pal' instead of 'phal' (फल)",
      "result": "Says 'moment' instead of 'fruit'"
    },
    "mistake_2": {
      "error": "Over-aspirating अल्पप्राण consonants",
      "example": "Saying 'khal' instead of 'kal' (कल)",
      "result": "Says 'villain' instead of 'tomorrow'"
    },
    "mistake_3": {
      "error": "Not distinguishing retroflex from dental",
      "example": "Saying डाल as दाल",
      "result": "Confuses 'branch' with 'lentils'"

        },
        "bahuvrihi": {
          "name": "बहुव्रीहि समास",
          "rule": "कोई पद प्रधान नहीं, अन्य अर्थ प्रधान",
          "examples": ["नीलकंठ (शिव)", "चतुर्भुज (विष्णु)", "दशानन (रावण)"]
        }
      },
      "severity": "major",
      "grade_level": "कक्षा 9-10"
    }
  },

  "sandhi_rules": {
    "swar_sandhi": {
      "rule_id": "HI_SANDHI_001",
      "name": "स्वर संधि",
      "name_en": "Vowel Sandhi",
      "description": "दो स्वरों के मिलने से होने वाला परिवर्तन",
      "types": {
        "dirgh_sandhi": {
          "name": "दीर्घ संधि",
          "rule": "समान स्वर मिलने पर दीर्घ स्वर बनता है",
          "examples": ["विद्या + आलय = विद्यालय", "मातृ + आज्ञा = मातृज्ञा", "गुरु + उपदेश = गुरूपदेश"]
        },
        "guna_sandhi": {
          "name": "गुण संधि",
          "rule": "अ/आ + इ/ई = ए; अ/आ + उ/ऊ = ओ",
          "examples": ["देव + इंद्र = देवेंद्र", "महा + उत्सव = महोत्सव", "सूर्य + उदय = सूर्योदय"]
        },
        "vriddhi_sandhi": {
          "name": "वृद्धि संधि",
          "rule": "अ/आ + ए/ऐ = ऐ; अ/आ + ओ/औ = औ",
          "examples": ["एक + एक = एकैक", "महा + ऐश्वर्य = महैश्वर्य", "परम + औषध = परमौषध"]
        },
        "yan_sandhi": {
          "name": "यण् संधि",
          "rule": "इ/ई/उ/ऊ/ऋ + असमान स्वर = य/व/र",
          "examples": ["अति + आचार = अत्याचार", "अनु + अय = अन्वय", "पितृ + आज्ञा = पित्राज्ञा"]
        }
      },
      "severity": "major",
      "grade_level": "कक्षा 9-10"
    },
    "vyanjan_sandhi": {
      "rule_id": "HI_SANDHI_002",
      "name": "व्यंजन संधि",
      "name_en": "Consonant Sandhi",
      "description": "व्यंजन + स्वर/व्यंजन के मिलने से परिवर्तन",
      "examples": ["वाक् + ईश = वागीश", "सत् + जन = सज्जन", "उत् + हार = उद्धार"],
      "severity": "major",
      "grade_level": "कक्षा 9-10"
    },
    "visarg_sandhi": {
      "rule_id": "HI_SANDHI_003",
      "name": "विसर्ग संधि",
      "name_en": "Visarga Sandhi",
      "description": "विसर्ग (:) के साथ स्वर/व्यंजन के मिलने से परिवर्तन",
      "examples": ["निः + आशा = निराशा", "दुः + गम = दुर्गम", "मनः + हर = मनोहर"],
      "severity": "major",
      "grade_level": "कक्षा 9-10"
    }
  },

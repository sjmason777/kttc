  "translation_critical_warnings": {
    "description": "Critical warnings for Persian-Arabic translation",
    "rules": [
      "Always verify meaning in target language context",
      "Do not assume Arabic etymology means same meaning",
      "Check formal vs colloquial usage differences",
      "Be aware of semantic drift over centuries",
      "Consider regional variations (Iranian Persian vs Dari vs Tajik)"
    ],
    "high_risk_domains": [
      "Legal documents (government vs state terminology)",
      "Religious texts (pilgrimage terminology)",
      "Political content (revolution vs coup)",
      "Medical/health (body part terminology)",
      "Educational (school vs office)"
    ]
  }

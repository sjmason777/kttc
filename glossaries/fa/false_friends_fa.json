  "arabic_loanwords_pronunciation_shifts": {
    "description": "Arabic words with pronunciation changes in Persian",
    "entries": {
      "أدب_ادب": {
        "arabic_original": "أَدَب (ádab) - stress on first syllable",
        "persian_form": "ادب (adáb) - stress on second syllable",
        "meaning": "discipline, politeness, literature",
        "note": "Stress shift according to Persian rules"
      },
      "وقت_وخت": {
        "arabic_original": "وَقْت (waqt)",
        "persian_form": "وقت (vaxt) or (vax)",
        "meaning": "time",
        "note": "Consonant cluster simplification"
      },
      "صبح_صب": {
        "arabic_original": "صُبْح (ṣubḥ)",
        "persian_form": "صبح (so:b) - with vowel lengthening",
        "meaning": "morning",
        "note": "Compensatory vowel lengthening"
      },
      "حکم_هکم": {
        "arabic_original": "حُكْم (ḥukm)",
        "persian_form": "حکم (hokm) or dialectal (húkəm)",
        "meaning": "judgment, ruling",
        "note": "Some dialects insert epenthetic vowel"
      }
    }

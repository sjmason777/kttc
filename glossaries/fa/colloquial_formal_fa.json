  "translation_guidelines": {
    "for_formal_target": [
      "Use full verb forms (می‌روم not میرم)",
      "Use را not رو",
      "Use formal vocabulary (بسیار not خیلی)",
      "Maintain proper ezafe marking",
      "Use آن not اون"
    ],
    "for_colloquial_target": [
      "Contract verbs appropriately",
      "Use رو for object marker",
      "Use colloquial vocabulary",
      "Allow natural speech patterns",
      "Consider regional variations"
    ],
    "register_detection_hints": {
      "formal_indicators": ["است", "می‌", "را", "بسیار", "آنجا", "بله"],
      "colloquial_indicators": ["ـه/ـس", "میـ (without nim-fasele)", "رو", "خیلی", "اونجا", "آره"]
    }
  }

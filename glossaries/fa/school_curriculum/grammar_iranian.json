  "ezafe_rules": {
    "ezafe_construction": {
      "rule_id": "FA_EZAFE_001",
      "name": "اضافه",
      "name_en": "Ezafe Construction",
      "description": "کسره اضافه برای پیوند دادن اسم به صفت یا مضاف به مضاف‌الیه",
      "examples": {
        "correct": [
          "کتابِ خوب (ketāb-e khub)",
          "خانه‌یِ بزرگ (khāne-ye bozorg)",
          "درِ اتاق (dar-e otāq)"
        ],
        "incorrect": [
          "کتاب خوب (without ezafe connection)",
          "خانه بزرگ (without ye-ezafe)"
        ]
      },
      "rules": {
        "after_consonant": "کسره (-e) بعد از حرف صامت: کتابِ",
        "after_vowel_aa": "یِ (ye) بعد از آ/ا: خانه‌یِ",
        "after_silent_h": "یِ (ye) بعد از ه غیرملفوظ: خانه‌یِ",
        "after_vowel_u_i": "یِ (ye) بعد از و/ی: داروی، جویِ"
      },
      "severity": "major",
      "grade_level": "دبستان"
    }
  },
  "verb_rules": {

    "severity": "informational",
    "numbers": {
      "八": {
        "pinyin": "bā",
        "sounds_like": "发 (fā) - prosperity, wealth",
        "association": "Extremely lucky, associated with wealth",
        "preferred_in": [
          "Business phone numbers (888-8888 is premium)",
          "Pricing (¥88, ¥888 are popular)",
          "Wedding dates",
          "Store opening dates",
          "License plates"

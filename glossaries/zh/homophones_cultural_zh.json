  "taboo_numbers": {
    "category": "Numbers with negative associations",
    "severity": "major",
    "numbers": {
      "四": {
        "pinyin": "sì",
        "sounds_like": "死 (sǐ) - death",
        "association": "Extremely unlucky, associated with death",
        "avoid_in": [
          "Phone numbers",
          "Floor numbers (many buildings skip 4th floor)",
          "License plates",
          "Room numbers",
          "Gift quantities",
          "Pricing (avoid ¥44, ¥444)"
        ],
        "cultural_note": "Tetraphobia is widespread in China, Taiwan, Hong Kong, Korea, Japan",
        "translation_warning": "Do not use '4' in product names, addresses for Chinese market",
        "example": "iPhone 4 was marketed carefully; some buildings have no 4th, 14th, 24th floors"
      },
      "七": {
        "pinyin": "qī",
        "sounds_like": "欺 (qī) - deceive, 气 (qì) - anger",
        "association": "Mixed - can be negative (ghost month is 7th month)",
        "context_dependent": true,
        "note": "Less taboo than 4, but avoid in certain contexts"
      },
      "十三": {
        "pinyin": "shísān",
        "sounds_like": "实三 (shísān)",
        "association": "Unlucky in Western contexts but neutral in Chinese",
        "note": "Not traditionally taboo in Chinese culture"
      }
    }
  },
  "lucky_numbers": {

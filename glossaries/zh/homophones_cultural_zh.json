  "unlucky_homophones": {
    "category": "Words to avoid due to negative homophone associations",
    "items": {
      "钟": {
        "pinyin": "zhōng",
        "sounds_like": "终 (zhōng) - end, death",
        "taboo_phrase": "送钟 (sòng zhōng) = sending a clock = 送终 (attending to dying)",
        "avoid": "NEVER give clocks as gifts",
        "severity": "critical",
        "alternative": "If must give watch, have recipient give small payment to 'buy' it"
      },
      "伞": {
        "pinyin": "sǎn",
        "sounds_like": "散 (sàn) - separate, scatter",
        "avoid": "Don't gift umbrellas to couples or business partners",
        "meaning": "Implies relationship will break apart",
        "severity": "major"
      },
      "梨": {
        "pinyin": "lí",
        "sounds_like": "离 (lí) - separate, leave",
        "avoid": "Don't share pears with loved ones",
        "phrase": "分梨 (fēn lí) = 分离 (separate)",
        "severity": "major"
      },
      "鞋": {
        "pinyin": "xié",
        "sounds_like": "邪 (xié) - evil",
        "avoid": "Giving shoes implies wanting someone to walk away",
        "context": "Especially avoid for elderly or romantic partners",
        "severity": "minor"
      },
      "绿帽子": {
        "pinyin": "lǜ màozi",
        "literal": "green hat",
        "meaning": "Cuckold (wife's infidelity)",
        "avoid": "NEVER give green hats or describe men wearing green hats",
        "severity": "critical",
        "note": "This is extremely offensive"
      },
      "白色": {
        "pinyin": "báisè",
        "association": "Death, mourning, funerals",
        "avoid": "White wrapping paper for gifts (except at funerals)",
        "context": "White is funeral color in China",
        "severity": "major"
      },
      "黑色": {
        "pinyin": "hēisè",
        "association": "Bad luck, evil",
        "avoid": "Black gift wrapping",
        "severity": "minor"
      }
    }
  },

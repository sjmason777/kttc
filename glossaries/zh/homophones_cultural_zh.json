      "六": {
        "pinyin": "liù",
        "sounds_like": "流 (liú) - flow, 溜 (liū) - smooth",
        "association": "Lucky, smooth sailing, everything goes well",
        "idiom": "六六大顺 (liùliù dàshùn) - everything goes smoothly",
        "preferred_in": ["Business dealings", "Wishes", "Phone numbers"]
      },
      "九": {
        "pinyin": "jiǔ",
        "sounds_like": "久 (jiǔ) - long-lasting",
        "association": "Longevity, eternity, imperial (9 was emperor's number)",

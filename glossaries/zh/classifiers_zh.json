  "measurement_classifiers": {
    "name_zh": "度量量词",
    "name_en": "Measurement Classifiers",
    "definition": "表示度量单位的量词",
    "classifiers": {
      "米": {
        "pinyin": "mǐ",
        "usage": "长度单位（meter）",
        "examples": ["一米长 (one meter long)", "两米高 (two meters tall)"]
      },
      "斤": {
        "pinyin": "jīn",
        "usage": "重量单位（500g）",
        "examples": ["一斤苹果 (one jin of apples)", "两斤肉 (two jin of meat)"]
      },
      "克": {
        "pinyin": "kè",
        "usage": "重量单位（gram）",
        "examples": ["一克盐 (one gram of salt)"]
      },
      "公斤": {
        "pinyin": "gōngjīn",
        "usage": "重量单位（kilogram）",
        "examples": ["一公斤大米 (one kilogram of rice)"]
      },
      "升": {
        "pinyin": "shēng",
        "usage": "容量单位（liter）",
        "examples": ["一升水 (one liter of water)"]
      },
      "度": {
        "pinyin": "dù",
        "usage": "温度、角度",
        "examples": ["三十度 (30 degrees)", "九十度角 (90-degree angle)"]
      },
      "元": {
        "pinyin": "yuán",
        "usage": "货币单位",
        "examples": ["一元钱 (one yuan)"]
      }
    }
  },

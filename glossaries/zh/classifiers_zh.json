    "classifiers": {
      "年": {
        "pinyin": "nián",
        "usage": "年",
        "examples": ["一年 (one year)", "三年时间 (three years)"]
      },
      "月": {
        "pinyin": "yuè",
        "usage": "月",
        "examples": ["一个月 (one month)", "两个月 (two months)"]
      },
      "天": {
        "pinyin": "tiān",
        "usage": "天",
        "examples": ["一天 (one day)", "三天 (three days)"]
      },
      "日": {
        "pinyin": "rì",
        "usage": "日（正式）",
        "examples": ["一日 (one day - formal)"]
      },
      "小时": {
        "pinyin": "xiǎoshí",
        "usage": "小时",
        "examples": ["一小时 (one hour)", "两小时 (two hours)"]
      },
      "分钟": {
        "pinyin": "fēnzhōng",
        "usage": "分钟",
        "examples": ["一分钟 (one minute)", "十分钟 (ten minutes)"]
      },
      "秒": {
        "pinyin": "miǎo",
        "usage": "秒",
        "examples": ["一秒 (one second)", "五秒 (five seconds)"]
      },
      "刻": {
        "pinyin": "kè",
        "usage": "一刻钟（15分钟）",
        "examples": ["一刻钟 (a quarter hour)"]
      }
    }
  },
  "verbal_classifiers": {
    "name_zh": "动量词",
    "name_en": "Verbal Classifiers",
    "definition": "表示动作次数的量词",
    "classifiers": {
      "次": {
        "pinyin": "cì",
        "usage": "次数",
        "examples": ["去一次 (go once)", "见两次 (see twice)", "试三次 (try three times)"]
      },
      "遍": {
        "pinyin": "biàn",
        "usage": "从头到尾的次数",
        "examples": ["读一遍 (read once through)", "说两遍 (say twice)", "看三遍 (watch three times)"]
      },
      "回": {
        "pinyin": "huí",
        "usage": "次数（口语）",
        "examples": ["去一回 (go once)", "来两回 (come twice)"]
      },
      "趟": {
        "pinyin": "tàng",
        "usage": "往返次数",
        "examples": ["跑一趟 (make a trip)", "走两趟 (make two trips)"]
      },
      "场": {
        "pinyin": "chǎng",
        "usage": "活动、比赛、演出",
        "examples": ["一场雨 (one rain)", "两场球赛 (two games)", "三场电影 (three movie showings)"]
      },
      "顿": {
        "pinyin": "dùn",
        "usage": "餐、打、骂",
        "examples": ["一顿饭 (one meal)", "挨一顿打 (get a beating)", "骂一顿 (scold once)"]
      },
      "阵": {
        "pinyin": "zhèn",
        "usage": "持续一段时间的动作",
        "examples": ["一阵风 (a gust of wind)", "一阵掌声 (a round of applause)"]
      },
      "下": {
        "pinyin": "xià",
        "usage": "短促的动作",
        "examples": ["看一下 (take a look)", "敲两下 (knock twice)", "想一下 (think for a moment)"]
      }
    }
  },

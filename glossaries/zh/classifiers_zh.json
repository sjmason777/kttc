  "classifier_overview": {
    "definition_zh": "量词表示计量单位，一般与数词结合构成数量短语",
    "definition_en": "Measure words/classifiers express counting units and generally combine with numerals to form quantity phrases",
    "uniqueness": "汉语特色！English and many other languages don't have this elaborate classifier system",
    "usage": "数词 + 量词 + 名词 (Numeral + Classifier + Noun)",
    "example": "三 本 书 (three [classifier] books)"
  },
  "individual_classifiers": {
    "name_zh": "个体量词",
    "name_en": "Individual Classifiers",
    "definition": "表示人或事物个体的量词",
    "classifiers": {
      "个": {
        "pinyin": "gè",
        "usage": "通用量词，最常用",
        "examples": ["一个人 (one person)", "两个苹果 (two apples)", "三个问题 (three questions)"],
        "note": "当不确定用什么量词时，'个'通常可以接受"
      },
      "只": {
        "pinyin": "zhī",
        "usage": "动物、某些器具",
        "examples": ["一只狗 (one dog)", "两只鸡 (two chickens)", "三只手 (three hands)"],
        "note": "主要用于动物和成对的物品之一"
      },
      "条": {
        "pinyin": "tiáo",
        "usage": "长条形物品、河流、道路、鱼",
        "examples": ["一条河 (one river)", "两条鱼 (two fish)", "三条裤子 (three pants)", "一条路 (one road)"]
      },
      "张": {
        "pinyin": "zhāng",
        "usage": "平面物品、纸、桌子、床、嘴",
        "examples": ["一张纸 (one piece of paper)", "两张桌子 (two tables)", "三张嘴 (three mouths)"]
      },
      "本": {
        "pinyin": "běn",
        "usage": "书籍、杂志",
        "examples": ["一本书 (one book)", "两本杂志 (two magazines)", "三本词典 (three dictionaries)"]
      },
      "支": {
        "pinyin": "zhī",
        "usage": "细长物品、笔、枪、队伍",
        "examples": ["一支笔 (one pen)", "两支枪 (two guns)", "三支队伍 (three teams)"]
      },
      "件": {
        "pinyin": "jiàn",
        "usage": "衣服、事情、物品",
        "examples": ["一件衣服 (one piece of clothing)", "两件事 (two matters)", "三件行李 (three pieces of luggage)"]
      },
      "台": {
        "pinyin": "tái",
        "usage": "机器、设备",
        "examples": ["一台电脑 (one computer)", "两台机器 (two machines)", "三台电视 (three TVs)"]
      },
      "把": {
        "pinyin": "bǎ",
        "usage": "有把手的物品、椅子、伞、刀",
        "examples": ["一把椅子 (one chair)", "两把伞 (two umbrellas)", "三把刀 (three knives)"]
      },
      "颗": {
        "pinyin": "kē",
        "usage": "小而圆的物品、牙齿、心",
        "examples": ["一颗牙 (one tooth)", "两颗心 (two hearts)", "三颗珍珠 (three pearls)"]
      },
      "粒": {
        "pinyin": "lì",
        "usage": "颗粒状物品",
        "examples": ["一粒米 (one grain of rice)", "两粒药 (two pills)", "三粒种子 (three seeds)"]
      },
      "棵": {
        "pinyin": "kē",
        "usage": "植物",
        "examples": ["一棵树 (one tree)", "两棵草 (two blades of grass)", "三棵白菜 (three cabbages)"]
      },
      "朵": {
        "pinyin": "duǒ",
        "usage": "花、云",
        "examples": ["一朵花 (one flower)", "两朵云 (two clouds)", "三朵玫瑰 (three roses)"]
      },
      "辆": {
        "pinyin": "liàng",
        "usage": "车辆",
        "examples": ["一辆车 (one car)", "两辆自行车 (two bicycles)", "三辆卡车 (three trucks)"]
      },
      "架": {
        "pinyin": "jià",
        "usage": "飞机、大型机械",
        "examples": ["一架飞机 (one airplane)", "两架钢琴 (two pianos)", "三架相机 (three cameras)"]
      },
      "座": {
        "pinyin": "zuò",
        "usage": "建筑物、山",
        "examples": ["一座桥 (one bridge)", "两座山 (two mountains)", "三座城市 (three cities)"]
      },
      "栋": {
        "pinyin": "dòng",
        "usage": "建筑物（较大）",
        "examples": ["一栋楼 (one building)", "两栋房子 (two houses)"]
      },
      "扇": {
        "pinyin": "shàn",
        "usage": "门、窗",
        "examples": ["一扇门 (one door)", "两扇窗 (two windows)"]
      },
      "块": {
        "pinyin": "kuài",
        "usage": "块状物品、钱（口语）",
        "examples": ["一块石头 (one stone)", "两块钱 (two yuan)", "三块蛋糕 (three pieces of cake)"]
      },
      "片": {
        "pinyin": "piàn",
        "usage": "薄片状物品、区域",
        "examples": ["一片面包 (one slice of bread)", "两片叶子 (two leaves)", "一片森林 (a forest area)"]
      }
    }
  },
  "collective_classifiers": {
    "name_zh": "集合量词",
    "name_en": "Collective Classifiers",
    "definition": "表示事物集合的量词",
    "classifiers": {
      "双": {
        "pinyin": "shuāng",
        "usage": "成对的物品",
        "examples": ["一双鞋 (one pair of shoes)", "两双筷子 (two pairs of chopsticks)", "三双手套 (three pairs of gloves)"]
      },
      "对": {
        "pinyin": "duì",
        "usage": "成对的人或物",
        "examples": ["一对夫妻 (one couple)", "两对父母 (two pairs of parents)", "一对耳环 (one pair of earrings)"]
      },
      "副": {
        "pinyin": "fù",
        "usage": "成套的物品",
        "examples": ["一副眼镜 (one pair of glasses)", "两副手套 (two pairs of gloves)", "一副对联 (one couplet)"]
      },
      "套": {
        "pinyin": "tào",
        "usage": "成套的物品",
        "examples": ["一套房子 (one suite/apartment)", "两套衣服 (two sets of clothes)", "一套书 (one set of books)"]
      },
      "群": {
        "pinyin": "qún",
        "usage": "成群的人或动物",
        "examples": ["一群人 (a group of people)", "两群羊 (two flocks of sheep)", "一群孩子 (a group of children)"]
      },
      "批": {
        "pinyin": "pī",
        "usage": "批次",
        "examples": ["一批货 (one batch of goods)", "两批学生 (two batches of students)"]
      },
      "帮": {
        "pinyin": "bāng",
        "usage": "一伙人（常带贬义）",
        "examples": ["一帮人 (a gang/bunch of people)", "一帮强盗 (a band of robbers)"]
      },
      "伙": {
        "pinyin": "huǒ",
        "usage": "一群人",
        "examples": ["一伙人 (a group of people)", "一伙儿 (together)"]
      },
      "队": {
        "pinyin": "duì",
        "usage": "队伍",
        "examples": ["一队士兵 (one troop of soldiers)", "一队学生 (one line of students)"]
      }
    }
  },

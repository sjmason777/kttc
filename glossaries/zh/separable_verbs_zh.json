  "grammar_rules": {
    "cannot_take_direct_object": {
      "description": "Separable verbs cannot take a direct object after the compound",
      "correct": "跟他见面",
      "incorrect": "*见面他",
      "explanation": "Object must come before the verb with preposition (跟/和)"
    },
    "aspect_marker_position": {
      "description": "Aspect markers (了/过) go between verb and object",
      "correct": "见了面",
      "incorrect": "*见面了"
    },
    "quantifier_position": {
      "description": "Quantifiers go between verb and object",
      "correct": "见了三次面",
      "incorrect": "*见面了三次"
    },
    "potential_complement": {
      "description": "Potential complements (得/不) can separate the verb",
      "examples": [
        "睡得着觉 / 睡不着觉 (can/cannot sleep)",
        "帮得上忙 / 帮不上忙 (can/cannot help)"
      ]
    }
  },
  "detection_rules": {
    "rule_1": {
      "name": "Object after separable verb",
      "description": "Flag patterns like '见面他' where object follows separable verb",
      "severity": "major"
    },
    "rule_2": {
      "name": "Aspect marker misplacement",
      "description": "Flag '见面了' instead of '见了面' in separation contexts",
      "severity": "minor"
    },
    "rule_3": {
      "name": "Duration phrase misplacement",
      "description": "Flag wrong placement of duration with separable verbs",
      "severity": "minor"
    }
  }

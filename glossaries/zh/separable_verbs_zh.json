    "version": "1.0.0",
    "created": "2025-11-22",
    "description": "Chinese separable verbs (离合词) - verbs that can be split by inserting elements between their components",
    "sources": [
      "HSK Grammar Standards",
      "Chinese Language Translation Quality 2025 Research",
      "Academic Chinese linguistics resources"
    ],
    "total_terms": 80,
    "usage": "Grammar checking, translation quality assessment, fluency evaluation"
  },
  "overview": {
    "term_zh": "离合词",
    "term_en": "Separable Verbs / Verb-Object Compounds",
    "pinyin": "líhécí",
    "definition": "Two-character verbs that can be split to insert other elements (aspects, complements, etc.)",
    "definition_zh": "可以拆开使用的动词，中间可以插入其他成分",
    "structure": "Verb + Object compound that acts as single verb but can separate",
    "importance": "Critical for natural Chinese - wrong usage marks non-native speaker",
    "common_error": "Adding object after separable verb (e.g., *见面他 instead of 见他面)"
  },
  "separation_patterns": {
    "aspect_insertion": {
      "description": "Insert aspect marker (了/过) between verb and object",
      "pattern": "V + 了/过 + (modifier) + O",
      "examples": [
        {
          "base": "见面",
          "meaning": "to meet",
          "separated": "见了面",
          "translation": "met (once)"
        },
        {
          "base": "睡觉",
          "meaning": "to sleep",
          "separated": "睡了觉",
          "translation": "slept"
        }
      ]
    },
    "quantifier_insertion": {
      "description": "Insert number + measure word between verb and object",
      "pattern": "V + Number + MW + O",
      "examples": [
        {
          "base": "见面",
          "separated": "见了一次面",
          "translation": "met once"
        },
        {
          "base": "洗澡",
          "separated": "洗了一个澡",
          "translation": "took a bath"
        }
      ]
    },
    "modifier_insertion": {
      "description": "Insert adjective/modifier before object",
      "pattern": "V + 了 + Adj + O",
      "examples": [
        {
          "base": "洗澡",
          "separated": "洗了个热水澡",
          "translation": "took a hot bath"
        },
        {
          "base": "睡觉",
          "separated": "睡了个好觉",
          "translation": "had a good sleep"
        }
      ]
    },
    "duration_insertion": {
      "description": "Insert duration phrase",
      "pattern": "V + Duration + O",
      "examples": [
        {
          "base": "游泳",
          "separated": "游了半小时泳",
          "translation": "swam for half an hour"
        }
      ]
    }
  },

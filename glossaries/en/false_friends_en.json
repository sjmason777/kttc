  "detection_guidelines": {
    "description": "Guidelines for detecting false friend errors in translation",
    "rules": [
      "Compare source word with target language lookalikes",
      "Verify meaning matches context, not just appearance",
      "Check if cognate exists but has shifted meaning",
      "Pay special attention to medical/legal/financial terms",
      "Flag any word that looks 'too similar' for manual review"
    ],
    "high_risk_domains": [

  "detection_rules": {
    "description": "Rules for detecting homophone errors in text",
    "patterns": [
      {
        "pattern": "their + verb",
        "likely_error": "their should be they're",
        "example": "Their going → They're going"
      },
      {
        "pattern": "your + adjective/adverb",
        "likely_error": "your should be you're",
        "example": "Your welcome → You're welcome"
      },
      {
        "pattern": "it's + noun",
        "likely_error": "it's should be its",
        "example": "It's tail → Its tail"
      },
      {
        "pattern": "to + adjective",
        "likely_error": "to should be too",
        "example": "to much → too much"
      },
      {
        "pattern": "affect + article/determiner",
        "likely_error": "affect should be effect",
        "example": "the affect → the effect"
      },
      {
        "pattern": "loose + object",
        "likely_error": "loose should be lose",
        "example": "loose the game → lose the game"
      }
    ]
  }

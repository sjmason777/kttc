  "overview": {
    "definition": "Homophones are words that sound the same but have different meanings and usually different spellings",
    "importance": "Critical for translation quality - MT and human translators often confuse these pairs",
    "detection_method": "Context analysis required to determine correct word choice",
    "severity": "major to critical - can completely change meaning"
  },
  "critical_homophones": {
    "description": "Most commonly confused pairs - high frequency errors",
    "severity": "critical",
    "pairs": {
      "their_there_theyre": {
        "words": ["their", "there", "they're"],
        "definitions": {
          "their": "possessive pronoun - belonging to them",
          "there": "adverb - in that place; also used as dummy subject",
          "they're": "contraction of 'they are'"
        },
        "examples": {
          "their": "Their house is beautiful.",
          "there": "The book is over there. / There are three apples.",
          "they're": "They're coming to the party."
        },
        "common_errors": [
          "Their going to the store. (should be: They're)",
          "I put it over they're. (should be: there)",
          "There car is red. (should be: Their)"
        ],
        "mnemonic": "THEIR = ownership (has 'heir' - inherits things), THERE = place (has 'here'), THEY'RE = they are (has apostrophe)"
      },
      "your_youre": {
        "words": ["your", "you're"],
        "definitions": {
          "your": "possessive pronoun - belonging to you",
          "you're": "contraction of 'you are'"
        },
        "examples": {
          "your": "Is this your book?",
          "you're": "You're very talented."
        },
        "common_errors": [
          "Your welcome. (should be: You're)",
          "You're car is nice. (should be: Your)"
        ],
        "test": "If you can replace with 'you are', use you're"
      },
      "its_its": {
        "words": ["its", "it's"],
        "definitions": {
          "its": "possessive pronoun - belonging to it (no apostrophe!)",
          "it's": "contraction of 'it is' or 'it has'"
        },
        "examples": {
          "its": "The dog wagged its tail.",
          "it's": "It's raining. / It's been a long day."
        },
        "common_errors": [
          "It's color is blue. (should be: Its)",
          "Its going to rain. (should be: It's)"
        ],
        "special_note": "Unlike other possessives, 'its' has NO apostrophe",
        "test": "If you can replace with 'it is' or 'it has', use it's"
      },
      "to_too_two": {
        "words": ["to", "too", "two"],
        "definitions": {
          "to": "preposition (direction) or infinitive marker",
          "too": "adverb meaning 'also' or 'excessively'",
          "two": "the number 2"
        },
        "examples": {
          "to": "Go to school. / I want to eat.",
          "too": "Me too. / It's too hot.",
          "two": "I have two cats."
        },
        "common_errors": [
          "I want too go. (should be: to)",
          "Me to! (should be: too)",
          "There are to many. (should be: too)"
        ],
        "mnemonic": "TOO has too many O's (excessive)"
      }
    }
  },

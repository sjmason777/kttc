  "exceptions_and_nuances": {
    "coordinate_adjectives": {
      "description": "Adjectives of equal importance can be reordered and use commas",
      "rule": "If you can put 'and' between them or swap them, they're coordinate",
      "examples": [
        {
          "phrase": "a cold, dark night",
          "can_swap": "a dark, cold night",
          "reason": "Both are opinion/observation adjectives"
        },
        {
          "phrase": "a tall, handsome man",
          "can_swap": "a handsome, tall man"
        }
      ],
      "vs_cumulative": "'big red ball' cannot be 'red big ball' - these are cumulative, not coordinate"
    },
    "emphasis_exception": {
      "description": "Intentional violation for poetic or emphatic effect",
      "examples": [
        {
          "standard": "a big bad wolf",
          "emphatic": "that horrible, big, bad wolf",
          "reason": "Extra adjectives and commas add emphasis"
        }
      ]
    },
    "purpose_as_compound": {
      "description": "Purpose adjectives often form compounds with nouns",
      "examples": [
        "'sleeping bag' is essentially one unit",
        "'running shoes' - 'running' is tightly bound to 'shoes'",
        "These don't follow normal adjective order rules"
      ]
    },
    "number_position": {
      "description": "Numbers typically come after determiners but before opinion",
      "examples": [
        "the three little pigs",
        "my two beautiful daughters",
        "those five old books"
      ]
    }
  },
